variables:
  - name: phi
    deriv: omega alpha
    type: angular
    bounds: -pi pi

  - name: theta
    type: angular
    bounds: -pi pi
    
  - name: x
    type: linear
    bounds: 0 5
    
  - name: y
    type: linear
    default: 5
    
  - name: z
    bounds: 0 5
    default: 2
    
  - name: q

frames:
  - id: 1
    name: p
    description: platform
    base: world
    matrix: tr(x,y,z)

  - id: 2
    name: p
    description: platform
    base: world
    matrix: tr(x,y,z)*Rx(theta)

  - id: 3
    matrix: tr(x,0,0)
